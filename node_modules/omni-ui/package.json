{
  "name": "omni-ui",
  "version": "7.27.2",
  "description": "Base behavior/presentation framework, examples, and a UI library for Omni web apps and components.",
  "type": "module",
  "types": "omni-ui.d.ts",
  "exports": {
    ".": {
      "types": "./omni-ui.d.ts",
      "import": "./omni-ui.js",
      "default": "./omni-ui.js"
    },
    "./icon/iconset-brand.js": "./dist/icon/iconset-brand.js",
    "./icon/iconset-app.js": "./dist/icon/iconset-app.js",
    "./icon/iconset-editor.js": "./dist/icon/iconset-editor.js",
    "./icon/iconset-informative.js": "./dist/icon/iconset-informative.js",
    "./icon/iconset-interactive.js": "./dist/icon/iconset-interactive.js",
    "./icon/iconset-object.js": "./dist/icon/iconset-object.js",
    "./omni-table-sticky.js": {
      "types": "./dist/component/omni-table-sticky/omni-table-sticky.d.ts",
      "import": "./dist/component/omni-table-sticky/omni-table-sticky.js",
      "default": "./dist/component/omni-table-sticky/omni-table-sticky.js"
    },
    "./omni-assist-chat-circle.js": {
      "types": "./dist/component/omni-assist/omni-assist-chat-circle.d.ts",
      "import": "./dist/component/omni-assist/omni-assist-chat-circle.js",
      "default": "./dist/component/omni-assist/omni-assist-chat-circle.js"
    },
    "./omni-assist-chat-fullscreen.js": {
      "types": "./dist/component/omni-assist/omni-assist-chat-fullscreen.js",
      "import": "./dist/component/omni-assist/omni-assist-chat-fullscreen.js",
      "default": "./dist/component/omni-assist/omni-assist-chat-fullscreen.js"
    },
    "./omni-logger.js": {
      "types": "./dist/omni-logger.js",
      "import": "./dist/omni-logger.js",
      "default": "./dist/omni-logger.js"
    },
    "./omni-tab.js": {
      "types": "./dist/component/omni-tab/omni-tab.js",
      "import": "./dist/component/omni-tab/omni-tab.js",
      "default": "./dist/component/omni-tab/omni-tab.js"
    },
    "./omni-modal.js": {
      "types": "./dist/component/omni-modal/omni-modal.js",
      "import": "./dist/component/omni-modal/omni-modal.js",
      "default": "./dist/component/omni-modal/omni-modal.js"
    },
    "./omni-assist-feedback-controls.js": {
      "types": "./dist/component/omni-assist/omni-assist-feedback-controls.d.ts",
      "import": "./dist/component/omni-assist/omni-assist-feedback-controls.js",
      "default": "./dist/component/omni-assist/omni-assist-feedback-controls.js"
    },
    "./omni-accordion.js": {
      "types": "./dist/component/omni-accordion/omni-accordion.js",
      "import": "./dist/component/omni-accordion/omni-accordion.js",
      "default": "./dist/component/omni-accordion/omni-accordion.js"
    }
  },
  "module": "omni-ui.js",
  "private": true,
  "license": "UNLICENSED",
  "files": [
    "/omni-ui.js",
    "/omni-ui.d.ts",
    "/outdated-browser-wall.css",
    "/font-snippet.html",
    "/tools/external-codegen",
    "/dist"
  ],
  "bin": "./tools/external-codegen/CLI-tool.js",
  "repository": {
    "type": "git",
    "url": "git+https://git@bitbucket.org/annalect/omni-ui.git"
  },
  "dependencies": {
    "construct-style-sheets-polyfill": "3.1.0",
    "dompurify": "3.1.6",
    "element-internals-polyfill": "1.3.11",
    "lit": "2.8.0",
    "marked": "9.1.6"
  },
  "optionalDependencies": {
    "jscodeshift": "^0.16.1",
    "minimist": "^1.2.8",
    "plop": "^4.0.1"
  },
  "scripts": {
    "analyze:bundle": "node esbuild.mjs --analyze",
    "analyze:cem": "cd lib/component/ && cem analyze --litelement",
    "build": "rimraf site-dist && replace \"REMOVE_STORY\" \"!dev', '!autodocs\" stories/**.ts && npm run storybook:build && cp outdated-browser-wall.css site-dist/ && replace \"!dev', '!autodocs\" \"REMOVE_STORY\" stories/**.ts",
    "codegen": "plop --plopfile tools/codegen/plopfile.mjs",
    "deploy:clean": "aws s3 rm s3://annalect-tech-omniui/dev --recursive",
    "deploy:move": "aws s3 cp s3://annalect-tech-omniui/dev/site-dist s3://annalect-tech-omniui/dev --recursive",
    "deploy:pub": "npm run deploy:clean && npm run deploy:storybook && npm run deploy:move",
    "deploy:refresh": "aws cloudfront create-invalidation --distribution-id E3QIHQGJ1LLWRI --paths \"/*\"",
    "deploy:storybook": "aws s3 sync . s3://annalect-tech-omniui/dev --exclude '*' --include 'site-dist/**'",
    "dev": "npm run storybook",
    "esbuild": "node esbuild.mjs",
    "format": "npm run format:prettier && npm run format:eslint && npm run format:stylelint",
    "format:eslint": "eslint --fix .; exit 0;",
    "format:prettier": "prettier . --write --ignore-path=.prettierignore; exit 0;",
    "format:stylelint": "stylelint '**/*.scss' --fix",
    "ignore-sync": "ignore-sync .",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint --quiet .; exit 0;",
    "lint:prettier": "prettier . --check --ignore-path=.prettierignore; exit 0;",
    "lint:stylelint": "stylelint '**/*.scss'",
    "optimize:svg": "open https://jakearchibald.github.io/svgomg/?removeViewBox=false&removeDimensions=true&removeAttrs=fill",
    "package": "rimraf .wireit/*/cache && rimraf dist && npm run ts && npm run esbuild",
    "preprelease": "node ./tools/prerelease.js --version=$VERSION --save=true",
    "release": "npm pkg delete scripts.prepare && npm pkg delete devDependencies && git add package.json && npm run package && git add -f ./dist && git rm -f ./dist/.tsbuildinfo && git commit -m \"Publish v$VERSION\" && git tag -a \"v$VERSION\" -m \"v$VERSION\" ",
    "start": "npm run dev",
    "ts": "wireit",
    "ts:no-emit": "wireit",
    "storybook": "concurrently --names=\"esbuild,ts,storybook\"  \"npm run esbuild -- --watch\" \"npm run ts:no-emit --watch\"  \"storybook dev -p 6006\"",
    "storybook:build": "storybook build -o site-dist",
    "storybook:preview": "http-server site-dist -a localhost -p 6007 -o"
  },
  "wireit": {
    "ts": {
      "command": "tsc --build --emitDeclarationOnly",
      "clean": "if-file-deleted",
      "files": [
        "lib/**/*.js",
        "lib/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**/*.js.map",
        "dist/**/*.d.ts.map"
      ]
    },
    "ts:no-emit": {
      "command": "tsc --noEmit",
      "files": [
        "lib/**/*.js",
        "lib/**/*.ts",
        "lib/**/*.scss",
        "tsconfig.json"
      ]
    }
  },
  "vaadin": {
    "disableUsageStatistics": true
  },
  "lint-staged": {
    "**/*.{js,ts,html}": [
      "prettier --ignore-path .gitignore --write",
      "eslint --fix"
    ],
    "**/*.{css,md,json,yml,scss}": "prettier --ignore-path .gitignore --write"
  },
  "engines": {
    "node": ">=15",
    "npm": ">=7"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
