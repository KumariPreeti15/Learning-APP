{
  "source": {
    "include": ["."],
    "includePattern": ".+\\.(j|t)s(doc|x)?$",
    "excludePattern": "(node_modules|docs)"
  },
  "recurseDepth": 10,
  "sourceType": "module",
  "opts": {
    "recurse": true,
    "destination": "./docs/",
    "template": "node_modules/clean-jsdoc-theme",
    "tutorials": "./tutorials/"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  }
}
