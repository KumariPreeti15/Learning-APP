{
  "plugins": ["compat"],
  "extends": [
    "@open-wc/eslint-config",
    "plugin:compat/recommended",
    "prettier"
  ],
  "env": {
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/no-unresolved": ["error", { "ignore": ["omni-app-container"] }],
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsForRegex": ["^draft"]
      }
    ]
  }
}
